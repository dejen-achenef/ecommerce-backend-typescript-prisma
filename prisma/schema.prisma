generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String     @id @default(uuid())
  username  String
  email     String   @unique
  createdAt DateTime @default(now())

  orders    Order[]
  products  Product[]
}

model Product {
  id          String       @id @default(uuid())
  name        String
  description String
  price       Float
  stock       Int
  category    String?

  userId String
  user   User  @relation(fields: [userId], references: [id])

  orderProducts OrderProducts[]  // many order relations
}

model Order {
  id          String     @id @default(uuid())
  userId      String
  description String
  totalPrice  Float
  status      String

  user        User      @relation(fields: [userId], references: [id])
  orderProducts  OrderProducts[]
}

model OrderProducts {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  quantity  Int       @default(1)
  totalPrice Float  // price snapshot

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId]) // Each product appears once per order
}
